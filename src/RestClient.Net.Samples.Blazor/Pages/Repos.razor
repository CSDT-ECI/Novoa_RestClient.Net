@page "/"

@using BlazorApp1.Data.Github
@using RestClient.Net;

<h1>My Repos</h1>

<p>Melbourne Developer's Github Repos</p>

@if (repos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Language</th>
                <th>Forks</th>
                <th>Watchers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var repo in repos)
            {
                <tr>
                    <td>@repo.name</td>
                    <td>@repo.language</td>
                    <td>@repo.forks_count</td>
                    <td>@repo.watchers_count</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Repository> repos = new List<Repository>();

    protected override async Task OnInitializedAsync()
    {
        var client = new Client(
            new NewtonsoftSerializationAdapter(),
            baseUrl: new Urls.AbsoluteUrl("https://api.github.com/users/melbournedeveloper/repos"),
            defaultRequestHeaders: "User-Agent".ToHeadersCollection("RestClient.Net")
            ); ;

        repos = await client.GetAsync<List<Repository>>() ??  new List<Repository>();
    }
}
